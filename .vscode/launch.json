// launch.json
{
    "version": "0.2.0",
   "configurations": [
       {
           "type": "node",
           "request": "launch",
           "name": "Debug Serverless offline",
           "cwd": "${workspaceFolder}",
           "runtimeExecutable": "npm",
           "runtimeArgs": [
               "run",
               "debug"
           ],
           "outFiles": [
               "${workspaceFolder}/handler.js"
           ],
           "sourceMaps": true
       }
   ]
}
